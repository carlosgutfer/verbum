<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/papiro_fondo"
tools:context=".ui.pantallajuegos.record.RecordActivity">

<com.google.android.gms.ads.AdView
    android:id="@+id/adViewBanner"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="4dp"
    app:adSize="BANNER"
    app:adUnitId="ca-app-pub-9592543293433576/3011990811"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BT_buscar"
        android:layout_width="360dp"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/pieza"
        android:text="@string/buscar"
        android:textColor="@color/marron"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/BT_dificultad"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="@+id/BT_dificultad"
        app:layout_constraintTop_toBottomOf="@+id/BT_dificultad" />

    <Button
        android:id="@+id/BT_dificultad"
        android:layout_width="360dp"
        android:layout_height="160dp"
        android:background="@drawable/pieza"
        android:contentDescription="@string/dificultad"
        android:text="@string/dificultad"
        android:textColor="@color/marron"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/BT_modoJuego"
        app:layout_constraintStart_toStartOf="@+id/BT_modoJuego"
        app:layout_constraintTop_toBottomOf="@+id/BT_modoJuego" />

    <Button
        android:id="@+id/BT_modoJuego"
        android:layout_width="360dp"
        android:layout_height="160dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/pieza"
        android:contentDescription="@string/ModoDeJuego"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:text="@string/ModoDeJuego"
        android:textColor="@color/marron"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adViewBanner" />

    <TextView
        android:id="@+id/TV_modosDeJuego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/button_border"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="casual"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/ModoDeJuego"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/BT_dificultad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/BT_modoJuego"
        app:layout_constraintTop_toTopOf="@+id/BT_modoJuego"
        app:layout_constraintVertical_bias="0.465" />

    <TextView
        android:id="@+id/TV_modosDeJuego2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_border"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="casual"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/Nombre"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/BT_buscar"
        app:layout_constraintStart_toStartOf="@+id/container_record"
        app:layout_constraintTop_toBottomOf="@+id/BT_buscar" />

    <TextView
        android:id="@+id/TV_dificultad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@drawable/button_border"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="casual"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/dificultad"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/BT_dificultad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/BT_dificultad"
        app:layout_constraintTop_toTopOf="@+id/BT_dificultad" />

    <TextView
        android:id="@+id/TV_dificultad2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_border"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="casual"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/Puntuacion"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/container_record"
        app:layout_constraintStart_toEndOf="@+id/TV_modosDeJuego2"
        app:layout_constraintTop_toBottomOf="@+id/BT_buscar" />

    <FrameLayout
        android:id="@+id/container_record"
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:foreground="@drawable/button_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.61"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_dificultad2">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>