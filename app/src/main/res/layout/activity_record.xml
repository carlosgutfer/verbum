<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_vertical"
    tools:context=".ui.pantallajuegos.RecordActivity">

    <TextView
        android:id="@+id/TV_RecordHerramientas"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="236dp"
        android:fontFamily="casual"
        android:padding="3dp"
        android:text="@string/SinRegistros"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_RecordEscalera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="casual"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/TV_RecordHerramientas"
        app:layout_constraintStart_toStartOf="@+id/TV_RecordHerramientas"
        app:layout_constraintTop_toBottomOf="@+id/TV_RecordHerramientas" />

    <TextView
        android:id="@+id/TV_RecordQue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/TV_RecordEscalera"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TV_RecordEscalera"
        app:layout_constraintTop_toBottomOf="@+id/TV_RecordEscalera" />
</androidx.constraintlayout.widget.ConstraintLayout>